# NGINX Frontend Static Server + API Reverse Proxy (HTTPS)
# Configuration pour servir le frontend React en production avec SSL/TLS
# et reverse proxy l'API backend

upstream backend {
    server backend:5000;
}

# Logs
error_log /var/log/nginx/error.log warn;
access_log /var/log/nginx/access.log main buffer=16k flush=5s;

# ParamÃ¨tres globaux
client_header_buffer_size 64k;
large_client_header_buffers 8 64k;
client_max_body_size 100M;

